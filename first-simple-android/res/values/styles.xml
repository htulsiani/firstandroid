<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- <style name="AppTheme" parent="android:Theme"/> -->
	
	<style name="AllpanExchangeTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/actionbar_backbutton</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/darkblue</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="android:subtitleTextStyle">@style/SubtitleTextStyle</item>
    </style>
    
    <!-- action bar title text -->
    <style name="TitleTextStyle"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">15sp</item>
    </style>
    
    <!-- action bar subtitle text -->
    <style name="SubtitleTextStyle"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
</resources>


