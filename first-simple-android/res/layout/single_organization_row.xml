<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:orientation="horizontal" 
    android:padding="10dip">
    
    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/grey70"
        android:textStyle="bold"
        android:typeface="sans">
    </TextView>
    
     <TextView
        android:id="@+id/validuntil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label"
        android:layout_marginTop="5dip"
        android:text=""
        android:textColor="@color/grey70"
        android:textSize="12sp">
    </TextView>
    
    <TextView
        android:id="@+id/availmemory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/validuntil"
        android:layout_marginTop="5dip"
        android:text=""
        android:textColor="@color/grey70"
        android:textSize="12sp">
    </TextView>
    
    <com.first.simple.mobile.android.util.CustomDrawableView
	    android:id="@+id/customdrawableview" 
	  	android:layout_width="wrap_content"     
	    android:layout_height="wrap_content" 
	    android:layout_marginTop="5dp"
	    android:background="@drawable/bg_chart"
		android:layout_below="@id/availmemory"
	 />
    
    <Button
		android:id="@+id/orgcontactbutton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="0dp"
		android:layout_marginTop="20dp"
		android:layout_below="@id/customdrawableview"
		android:layout_alignParentRight="true"
		android:background="@drawable/org_contact_button">
      </Button>
      
     <Button
		android:id="@+id/projectbutton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="20dp"
		android:layout_toLeftOf="@id/orgcontactbutton"
		android:layout_below="@id/customdrawableview"
		android:background="@drawable/project_button">
      </Button>
           
</RelativeLayout>
