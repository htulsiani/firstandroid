<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hgr2_1280x768"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:contentDescription="@string/title_activity_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/exchange_logo" />
    
     <TextView
        android:id="@+id/teasertext"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_gravity="center"
        android:textColor="@color/darkblue"
        android:ems="6"
        android:text="@string/teaser">
    </TextView>
    
    <EditText
        android:id="@+id/username"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/lightblueAA"
        android:textColor="@color/grey70"
        android:padding="5dp"
		android:inputType="textEmailAddress"
		android:lines="1"
		android:maxLength="128"
        android:hint="@string/username" >
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@color/lightblueAA"
        android:textColor="@color/grey70"
        android:padding="5dp"
        android:hint="@string/password"
        android:lines="1"
        android:maxLength="128"
        android:scrollHorizontally="true"
        android:inputType="textPassword" />
   
    <Button
		android:id="@+id/Loginbutton"
		android:layout_width="250dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginTop="10dp"
		android:textColor="@color/white"
		android:textSize="25sp"
		android:text="@string/login"
		android:background="@drawable/login_button">
    </Button>

</LinearLayout>